<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ms-auto posts__linkBox">
    <%= form_tag posts_path, method: :get, class: 'posts__searchForm' do %>
      <% select_tag :category_id,
                    options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                    {
                      prompt: 'カテゴリで絞り込み',
                      class: 'form-control posts__select',
                      onchange: 'submit(this.form);'
                    }
      %>
    <% end %>
    <%= link_to '新規作成', new_post_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
<table class="table table-hover posts__table">
  <thead class="table-dark">
    <tr>
      <th>タイトル</th>
      <th>作成者</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <%= link_to userpage_path(post.user.name) do %>
            <p>
              <% if post.user.profile.present? %>
                <%= image_tag post.user.profile.icon, class: 'header-profile-icon' %>
              <% else %>
                <%= image_tag "/assets/default.jpg", class: 'header-profile-icon' %>
              <% end %>
              <%= post.user.name %>
            </p>
          <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', post, class: 'btn btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
