<div class="d-flex align-items-center">
  <h1>プロフィール</h1>
  <div class="ms-auto profiles__linkBox">
    <%= link_to '編集', edit_profile_path, class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<table class="table">
  <tr>
    <th scope="col">姓</th>
    <td><%= @profile.first_name %></td>
  </tr>
  <tr>
    <th scope="col">名</th>
    <td><%= @profile.last_name %></td>
  </tr>
  <tr>
    <th scope="col">せい</th>
    <td><%= @profile.first_name_kana %></td>
  </tr>
  <tr>
    <th scope="col">めい</th>
    <td><%= @profile.last_name_kana %></td>
  </tr>
  <tr>
    <th scope="col">ニックネーム</th>
    <td><%= @profile.nickname %></td>
  </tr>
  <tr>
    <th scope="col">誕生日</th>
    <td><%= @profile.birthday %></td>
  </tr>
  <tr>
    <th scope="col">電話番号</th>
    <td><%= @profile.phone_number %></td>
  </tr>
  <tr>
    <th scope="col">都道府県</th>
    <td><%= @profile.prefectures %></td>
  </tr>
</table>
