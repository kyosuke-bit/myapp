<% if @post.favorite_user(current_user).present? %>
  <%= link_to post_favorite_path(post_id: @post.id, id: @post.favorites[0].id), method: :delete, remote: true do %>
    <div class="vertical_favorite text-center">
      <span><i class="fas fa-heart fa-lg" style="color:red;"></i></span><span> いいねを取り消す</span>
    </div>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post_id: @post.id), method: :post, remote: true do %>
    <div class="vertical_favorite text-center">
      <span><i class="far fa-heart fa-lg"></i></span><span> いいね！</span>
    </div>
  <% end %>
<% end %>
<p class="text-end">
  <span class="fw-bolder"><%= @post.favorites.count %></span><span> 件のいいね</span>
</p>
